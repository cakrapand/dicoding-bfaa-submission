<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Githubuser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_800</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="Theme.Githubuser.Card" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
    </style>
    <style name="Theme.Githubuser.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>